<% for permission_group in PermissionGroup.all  %>
  <% unless permission_group.permissions.empty?  %>
    <fieldset>
      <legend><%= t('.'+permission_group.name) %></legend>
      <ul>
        <% for permission in permission_group.permissions.for_user_groups  %>
        <li><%= check_box_tag "user_group[permission_ids][]", permission.id, @user_group.permissions.include?(permission) %>
          <%= label_tag t(".#{permission.name}")  %></li>
          <% end  %>
        </ul>
      </fieldset>
    <% end  %>
<% end  %>