<%= image_tag "big_logo.gif", :alt =>"Palani Logo", :id=>"logo" %>

<% form_for @user_session, :url => admin_user_sessions_path do |f| %>
	
	<fieldset>
		<%= f.label :username, t('.user')+':' %>
		<%= f.text_field :username %> <br />
	</fieldset>
	
	<fieldset>
	<%= f.label :password, t('.password')+':' %>
	<%= f.password_field :password %> <br />
	</fieldset>
	
	<fieldset>
	<%= f.submit "Login", :id => "submit" %>
	</fielset>
	
<% end %>