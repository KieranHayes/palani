<div id="edit_page">
  <% remote_form_for :page, @page, :url => admin_page_path(@page), :html => { :id => "edit_page_form", :method => :put } do |f| %>
    <ul class="simple_tabs">
      <li class="current"><%= t(".general_options") %></li>
      <li><%= t(".type_settings") %></li>
      <li><%= t(".template") %></li>
      <li><%= t(".meta_informations") %></li>
      <li><%= t(".tags") %></li>
    </ul>
    <div class="tab_content current">
      <fieldset>
        <legend><%= t(".page_settings") %></legend>
        <div class="clear">
          <%= f.label :title, t(".title") %>
          <%= f.text_field :title %>
        </div>
        <div class="clear">
          <%= f.label :type, t(".type") %>
          <%= f.select :dummy_type, options_for_select(page_types, @page.type) %>
        </div>
        <div class="clear">
          <%= f.label :navigation_title, t(".navigation_title") %>
          <%= f.text_field :navigation_title %>
        </div>
      </fieldset>
      <fieldset>
        <legend><%= t(".visibility") %></legend>
        <div class="clear">
    	    <%= f.label :hidden, t(".hidden") %>
    		  <%= f.check_box :hidden, :class => "checkbox" %>
    		</div>
    		<div class="clear">
    		  <%= f.label :hidden_in_menu, t(".hidden_in_menu") %>
    		  <%= f.check_box :hidden_in_menu, :class => "checkbox" %>
    		</div>
    	</fieldset>
    </div>
    <div id="type_settings" class="tab_content">
        <%= render_settings @page %>
    </div>
    <div class="tab_content">
      <fieldset>
        <legend><%= t(".template") %></legend>
        <%= f.label :template, t(".template") %>
        <%= f.select :template_id, PageTemplate.all.collect { |t| [t.title, t.id]  }, { :include_blank => true } %>
      </fieldset>
    </div>
    <div class="tab_content">
      <fieldset>
        <legend><%= t(".author") %></legend>
        <div class="clear">
          <%= f.label :author, t(".author") %>
          <%= f.text_field :author %>
        </div>
        <div class="clear">
          <%= f.label :author_email, t(".author_email") %>
          <%= f.text_field :author_email %>
        </div>
      </fieldset>
      <fieldset>
        <legend><%= t(".abstract") %></legend>
        <div class="clear">
          <%= f.label :abstract, t(".abstract") %>
          <%= f.text_area :abstract, :rows => 8 %>
        </div>
      </fieldset>
      <fieldset>
        <legend><%= t(".description") %></legend>
        <div class="clear">
          <%= f.label :description, t(".description") %>
          <%= f.text_area :description, :rows => 8 %>
        </div>
      </fieldset>
    </div>
    <div class="tab_content">
      <fieldset>
        <legend><%= t(".tags") %></legend>
        <div class="clear">
      	  <%= f.label :tag_list, t(".tags") %>
      	  <%= f.text_field :tag_list, :id => "page_tag_list" %>
    		</div>
      </fieldset>
    </div>
    <%= f.label "" %>
    <%= f.submit t(".submit_text"), :class => "submit" %>
  <% end %>
</div>